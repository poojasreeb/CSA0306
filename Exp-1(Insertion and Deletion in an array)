#include <stdio.h>

int main() {
    int a[100], n, i, pos, val;

    printf("Enter size: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for(i = 0; i < n; i++) 
        scanf("%d", &a[i]);

    printf("Insert pos & val: ");
    scanf("%d %d", &pos, &val);
    for(i = n; i > pos; i--) 
        a[i] = a[i - 1];
    a[pos] = val; 
    n++;

    printf("After insertion: ");
    for(i = 0; i < n; i++) 
        printf("%d ", a[i]);
    printf("\n");

    printf("Delete pos: ");
    scanf("%d", &pos);
    for(i = pos; i < n - 1; i++) 
        a[i] = a[i + 1];
    n--;

    printf("After deletion: ");
    for(i = 0; i < n; i++) 
        printf("%d ", a[i]);
    printf("\n");

    return 0;
}

